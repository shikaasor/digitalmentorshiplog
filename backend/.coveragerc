[run]
# What to measure
source = app
omit =
    */tests/*
    */test_*.py
    */__pycache__/*
    */venv/*
    */env/*
    */conftest.py

[report]
# Reporting options
precision = 2
show_missing = True
skip_covered = False

# Files to exclude from report
exclude_lines =
    pragma: no cover
    def __repr__
    raise AssertionError
    raise NotImplementedError
    if __name__ == .__main__.:
    if TYPE_CHECKING:
    @abstractmethod

[html]
# HTML report options
directory = htmlcov
title = Digital Mentorship Log - Coverage Report
